# =============================================================================
# Digital Brain Configuration
# =============================================================================

# --- LLM Provider ---
# Options: gemini, ollama, openai
LLM_PROVIDER=gemini
LLM_MODEL=gemini-3-flash-preview

# For Gemini
GOOGLE_API_KEY=your-google-api-key

# For Ollama (local)
# LLM_PROVIDER=ollama
# LLM_MODEL=llama3.1:latest
OLLAMA_BASE_URL=http://localhost:11434

# For OpenAI
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o-mini
# OPENAI_API_KEY=your-openai-api-key

# --- Embedder ---
# Options: auto, ollama, openai, gemini
# "auto" (default) follows LLM_PROVIDER with sensible model/dims:
#   gemini -> gemini-embedding-001 (3072 dims)
#   openai -> text-embedding-3-small (1536 dims)
#   ollama -> nomic-embed-text:latest (768 dims)
EMBEDDER_PROVIDER=auto
# EMBEDDER_MODEL=gemini-embedding-001
# EMBEDDING_DIMS=3072

# --- Vector Store (Qdrant) ---
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=digital_brain_memories

# --- Graph Store (Neo4j) â€” optional ---
NEO4J_ENABLED=false
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# --- Reflection Agent ---
REFLECTION_SCHEDULE_HOUR=3
REFLECTION_SCHEDULE_MINUTE=0
REFLECTION_LOOKBACK_HOURS=24
REFLECTION_MIN_MEMORIES=3

# --- Predictive Engine ---
PREDICTION_CONFIDENCE_THRESHOLD=0.7
MAX_PRELOAD_MEMORIES=10
MAX_PRELOAD_TOKENS=2000

# --- Memory ---
MEMORY_TTL_DAYS=0  # 0 = disabled (memories never expire)

# --- Logging ---
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# --- Telegram Bot ---
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
# Webhook mode (leave empty for polling mode, ideal for local development)
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_SECRET=
# Access policy: open | pairing | disabled
TELEGRAM_DM_POLICY=pairing
# Pre-authorized Telegram user IDs (comma-separated)
TELEGRAM_ALLOW_FROM=[]
TELEGRAM_DEBOUNCE_MS=1500

# --- Media Processing ---
MEDIA_MAX_FILE_SIZE_MB=20
# MIME types allowed (supports wildcards)
# MEDIA_ALLOWED_TYPES=["image/*", "audio/*", "video/*", "application/pdf"]

# --- API ---
API_HOST=0.0.0.0
API_PORT=8000
