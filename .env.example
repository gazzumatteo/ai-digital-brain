# =============================================================================
# Digital Brain Configuration
# =============================================================================

# --- LLM Provider ---
# Options: gemini, ollama, openai
LLM_PROVIDER=gemini
LLM_MODEL=gemini-3-flash-preview

# For Gemini
GOOGLE_API_KEY=your-google-api-key

# For Ollama (local)
# LLM_PROVIDER=ollama
# LLM_MODEL=llama3.1:latest
OLLAMA_BASE_URL=http://localhost:11434

# For OpenAI
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o-mini
# OPENAI_API_KEY=your-openai-api-key

# --- Embedder ---
# Options: ollama, openai, gemini
EMBEDDER_PROVIDER=ollama
EMBEDDER_MODEL=nomic-embed-text:latest
EMBEDDING_DIMS=768

# --- Vector Store (Qdrant) ---
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=digital_brain_memories

# --- Graph Store (Neo4j) â€” optional ---
NEO4J_ENABLED=false
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# --- Reflection Agent ---
REFLECTION_SCHEDULE_HOUR=3
REFLECTION_SCHEDULE_MINUTE=0
REFLECTION_LOOKBACK_HOURS=24
REFLECTION_MIN_MEMORIES=3

# --- Predictive Engine ---
PREDICTION_CONFIDENCE_THRESHOLD=0.7
MAX_PRELOAD_MEMORIES=10

# --- API ---
API_HOST=0.0.0.0
API_PORT=8000
